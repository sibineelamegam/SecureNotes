# Ignore node_modules in both frontend and backend
/frontend/node_modules/
/backend/node_modules/

# Ignore build output
/frontend/dist/
/backend/dist/
/frontend/build/
/backend/build/

# Ignore env files in both
/frontend/.env
/frontend/.env.*
/backend/.env
/backend/.env.*

# Logs
**/*.log
/backend/logs/

# Coverage reports
/frontend/coverage/
/backend/coverage/

# OS & IDE files
.DS_Store
Thumbs.db
.vscode/
.idea/

# Optional cache/temp folders
**/.cache/
/frontend/tmp/
/backend/tmp/

# Optional: lock files (if you're managing deps separately inside folders)
# Uncomment these lines if you're not committing them intentionally
# /frontend/package-lock.json
# /backend/package-lock.json

# Misc
*.tgz
